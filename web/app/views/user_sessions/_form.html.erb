<div style="width:300px;margin:0 auto">
<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= text_field_tag :username, nil, placeholder: 'Username' %>
  </div>
  <div class="field">
    <%= password_field_tag :password, nil, placeholder: 'Password' %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>
</div>